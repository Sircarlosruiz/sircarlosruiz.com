---
interface Props {
  title: string;
  description: string;
  tags: string[];
  href?: string;
}

const { title, description, tags, href } = Astro.props;
---

<a href={href || "#"} class="block border border-slate-800 rounded-2xl p-4 hover:border-sky-500/70 hover:-translate-y-1 transition">
  <h3 class="font-semibold mb-1">{title}</h3>
  <p class="text-xs text-slate-300 mb-3">{description}</p>
  <div class="flex flex-wrap gap-1">
    {tags.map((tag) => (
      <span class="px-2 py-0.5 rounded-full bg-slate-900 text-[10px] text-sky-300">
        {tag}
      </span>
    ))}
  </div>
</a>

